@using BlazorApp1.Data;
<tr>
	<td>
		<div>
			@pokemon.Id
		</div>
	</td>
    <td>
        <div>
            @pokemon.Name[0].ToString().ToUpper()

        </div>
    </td>
	<td>
		<div>
            <!-- Only Here for Testing Purposes-->
            @pokemon

        </div>
    </td>
    <td>
        <div>
            @if (pokemon.Types != null && pokemon.Types.Count > 0)
            {
                var formattedTypes = string.Join(", ", pokemon.Types.Select(t => char.ToUpper(t.Name[0]) + t.Name.Substring(1)));

                <span>@formattedTypes</span> 
            }
        </div>
	</td>
</tr>

@code {
	[Parameter]
	public Pokemon pokemon { get; set; }
}
